<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.asksven.systemsettings"
      android:versionCode="1"
      android:versionName="0.2.0.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PreferencesActivity" android:label="Preferences"></activity>
		<activity android:name=".CommandDetailsActivity" android:label="Commands"></activity>
		<activity android:name=".AboutActivity" android:label="About"></activity>
		<receiver android:name=".IntentHandler">
			<intent-filter>
                <action android:name="com.asksven.systemsettings.action.EXECUTE_COMMAND" />
                <data android:scheme="content" />
            </intent-filter>            
		</receiver>
    </application>
    <uses-sdk android:minSdkVersion="6" />

</manifest> 