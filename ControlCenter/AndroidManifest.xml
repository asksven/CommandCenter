<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.asksven.commandcenter"
      android:versionCode="2"
      android:versionName="0.6.0.0">
    <!--  required for writing dump files -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-sdk android:minSdkVersion="7" />
    
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
		
        <!--
        <activity android:name="BasicActivity" 
                  android:label="@string/app_name">
-->             
        
        <activity android:name="com.asksven.commandcenter.FragmentTabsPager" 
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
                
        <activity android:name=".FragmentTabsPager" android:label="Commands"></activity>
        <activity android:name=".PreferencesActivity" android:label="Preferences"></activity>
		<activity android:name=".CommandDetailsActivity" android:label="Commands"></activity>
		<activity android:name=".BasicActivity" android:label="Commands"></activity>
		<activity android:name=".MainActivity" android:label="Old Commands"></activity>
		<activity android:name=".BasicDetailsActivity" android:label="Details"></activity>
		<activity android:name=".AboutActivity" android:label="About"></activity>
		<receiver android:name=".IntentHandler">
			<intent-filter>
                <action android:name="com.asksven.commandcenter.action.EXECUTE_COMMAND" />
                <data android:scheme="content" />
            </intent-filter>            
		</receiver>
    </application>
    

</manifest> 